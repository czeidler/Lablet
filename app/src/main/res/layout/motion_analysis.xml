<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <view class="nz.ac.auckland.lablet.camera.FrameContainerView" android:id="@+id/frameContainerView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"/>


    <FrameLayout android:id="@+id/sideBarFrame"
                 android:layout_width="320dp"
                 android:layout_height="match_parent"
                 android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="180dp"
        android:minHeight="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:background="#94000000"
        android:visibility="gone"
        android:id="@+id/trackingState"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tracking object"
            android:id="@+id/textView10"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time elapsed: "
            android:id="@+id/timeElapsed"
            android:layout_marginStart="20dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time left: "
            android:layout_marginStart="20dp"
            android:id="@+id/timeLeft"
            android:textSize="17sp" />

    </LinearLayout>

    <view class="nz.ac.auckland.lablet.camera.FrameDataSeekBar" android:id="@+id/frameDataSeekBar"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"/>



</RelativeLayout>

