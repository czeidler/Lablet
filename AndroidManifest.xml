<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="nz.ac.aucklanduni.physics.tracker"
          android:versionCode="120"
          android:versionName="2.0 beta">
    <uses-sdk android:minSdkVersion="17"/>
    <application android:label="@string/app_name" android:icon="@drawable/ic_tracker">
        <activity android:name=".ExperimentHomeActivity"
                  android:icon="@drawable/ic_tracker"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".ExperimentAnalyserActivity"
                  android:icon="@drawable/ic_tracker"/>

        <activity android:name=".camera.CameraExperimentActivity"
                  android:icon="@drawable/ic_video"/>
        <activity android:name=".camera.CameraRunSettingsActivity"
                  android:icon="@drawable/ic_cut" />

        <activity android:name=".ScriptHomeActivity"
                  android:icon="@drawable/ic_tracker"
                  android:label="@string/script_activity_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".script.ScriptRunnerActivity"
                  android:icon="@drawable/ic_console"
                  android:windowSoftInputMode="stateHidden" />
    </application>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.RECORD_VIDEO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
</manifest>
