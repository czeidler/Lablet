<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_row="0" android:layout_column="0" android:layout_rowSpan="8"
            android:paddingRight="10dp" android:minWidth="50dp">
        <view android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              class="nz.ac.aucklanduni.physics.tracker.views.table.TableView" android:id="@+id/dataTable" android:focusable="false"/>
    </ScrollView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fill the table:"
            android:id="@+id/enterSpeedTextView" android:layout_row="0" android:layout_column="1"/>
    <TableLayout
            android:layout_width="700dp"
            android:layout_height="wrap_content" android:layout_row="1" android:layout_column="1" android:layout_rowSpan="5" android:layout_columnSpan="5"
            android:stretchColumns="*" android:background="#464646">
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" android:layout_column="0">
            <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="time [ms]"
                    android:id="@+id/textView"/>
            <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="position [m]"
                    android:id="@+id/postionLabel"/>
            <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="speed [m/s]"
                    android:id="@+id/textView3"/>
            <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="acceleration [m/s^2]"
                    android:id="@+id/textView4"/>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:editable="false" android:enabled="true" android:focusable="false"
                    android:id="@+id/time1EditText" android:selectAllOnFocus="false"/>
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:ems="10"
                    android:nextFocusDown="@+id/position2EditText"
                    android:id="@+id/position1EditText" android:selectAllOnFocus="true"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:nextFocusDown="@+id/speed2EditText"
                    android:id="@+id/speed1EditText" android:selectAllOnFocus="true"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
        </TableRow>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:editable="false" android:enabled="true" android:focusable="false"
                    android:id="@+id/time2EditText"/>
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:ems="10"
                    android:nextFocusDown="@+id/position3EditText"
                    android:id="@+id/position2EditText" android:selectAllOnFocus="true"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:id="@+id/acceleration1EditText" android:selectAllOnFocus="true"/>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:nextFocusDown="@+id/acceleration1EditText"
                    android:id="@+id/speed2EditText" android:selectAllOnFocus="true"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
        </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:editable="false" android:enabled="true" android:focusable="false"
                    android:id="@+id/time3EditText"/>
            <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:ems="10"
                    android:nextFocusDown="@+id/speed1EditText"
                    android:id="@+id/position3EditText" android:selectAllOnFocus="true"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
            <Space
                    android:layout_width="0dp" android:layout_height="20dp"/>
        </TableRow>
    </TableLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/buttonOk" android:layout_row="6" android:layout_column="5"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_row="0" android:layout_column="6"
            android:paddingLeft="10dp" android:minWidth="50dp" android:layout_rowSpan="8">
        <view android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              class="nz.ac.aucklanduni.physics.tracker.views.table.TableView" android:id="@+id/speedTable" android:focusable="false"/>
    </ScrollView>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_row="0" android:layout_column="7"
            android:paddingLeft="10dp" android:minWidth="50dp" android:layout_rowSpan="8">
        <view android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              class="nz.ac.aucklanduni.physics.tracker.views.table.TableView" android:id="@+id/accelerationTable" android:focusable="false"/>
    </ScrollView>


</GridLayout>